<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eafb"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8eafb"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        >

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/phyaw_yay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="ေဖ်ာ္ရည္"
                android:textColor="@color/text_color" />

            <Button
                android:id="@+id/a_tee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_gap"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="အသီး"
                android:textColor="@color/text_color" />

            <Button
                android:id="@+id/milk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_gap"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="ႏို"
                android:textColor="@color/text_color" />

            <Button
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_gap"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:text="အျခား"
                android:textAllCaps="false"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/menu">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/vertical_gap"
                android:layout_marginRight="@dimen/vertical_gap"
                android:layout_toRightOf="@id/menu"
                android:orientation="vertical">

                <Button
                    android:id="@+id/item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_gap"
                    android:background="@drawable/custom_button"
                    android:textAllCaps="false" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/item"
            android:orientation="vertical"
            android:weightSum="7">

            <ScrollView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/item"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/vertical_gap"
                    android:layout_marginRight="@dimen/vertical_gap"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/quantity_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button"
                        android:text="x1"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/quantity_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_gap"
                        android:background="@drawable/custom_button"
                        android:text="x2"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/quantity_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_gap"
                        android:background="@drawable/custom_button"
                        android:text="x3"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/quantity_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_gap"
                        android:background="@drawable/custom_button"
                        android:text="x4"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/quantity_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_gap"
                        android:background="@drawable/custom_button"
                        android:text="x5"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/quantity_other"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginTop="@dimen/vertical_gap"
                        android:background="@drawable/custom_button"
                        android:text="More"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/custom_button"
                android:text="OK" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/quantity">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:elevation="1200dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="Item"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_quantity_in_cardview"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Quant"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:id="@+id/textview_rate_in_cardview"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Rate"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:id="@+id/textview_amount_in_cardview"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Total"
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/card_view_label"
                android:orientation="vertical"
                android:weightSum="6">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/vertical_gap"
                    android:layout_toRightOf="@id/quantity"
                    android:layout_weight="1" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_label2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:background="@color/colorPrimary"
                    android:elevation="1200dp"
                    card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Total Quant:"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:id="@+id/textview_total_quantity_in_cardview"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Total Price:"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:id="@+id/textview_total_amount_in_cardview"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/relative"
            android:src="@drawable/ic_delete_white_24dp"
            app:layout_anchor="@id/relative"
            app:layout_anchor_Gravity="bottom|right|end"

            />

    </RelativeLayout>
</HorizontalScrollView><!--

